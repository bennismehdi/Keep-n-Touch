<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.example.um2.aigle.alo.Common.Commerce.CommerceActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:onClick="switchList"
            android:text="Liste d'annonces"
            android:layout_marginRight="15dp"
            android:id="@+id/buttonListCommerce"
            android:layout_width="150dp"
            android:layout_height="60dp" />
        <Button
            android:onClick="switchLocalisation"
            android:text="Annonce par localisation"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/buttonListCommerce"
            android:id="@+id/buttonLocalisationCommerce"
            android:layout_width="150dp"
            android:layout_height="60dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
